<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/border_main"
    android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/text_my_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/himchan_bold"
        android:text="동아리 이름"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_my_item_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지원분야"
        android:fontFamily="@font/himchan_light"
        android:textSize="20sp"
        android:textColor="@color/main"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/text_my_item_name"
        app:layout_constraintTop_toBottomOf="@id/text_my_item_name"/>

    <TextView
        android:id="@+id/text_my_item_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-02-19"
        android:fontFamily="@font/himchan_light"
        android:textSize="16sp"
        android:textColor="@color/button_gray"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/text_my_item_major"
        app:layout_constraintTop_toBottomOf="@id/text_my_item_major"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_my_item_state"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_before"
        android:backgroundTint="@color/light_gray"
        android:text="대기 중"
        android:textSize="18sp"
        android:fontFamily="@font/himchan_medium"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>